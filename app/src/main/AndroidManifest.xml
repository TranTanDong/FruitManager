<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.woo.quanlytraicay">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app2"
        android:label="Fruit Manager"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FruitManager.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FruitManager.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".FruitManager.FruitList"
            android:label="Danh sách trái cây" />
        <activity
            android:name=".FruitManager.OrderActivity"
            android:label="Giỏ hàng" />
        <activity
            android:name=".FruitManager.FruitDetail"
            android:label="Chi tiết sản phẩm" />
        <activity android:name=".FruitManager.HistoryActivity" />
        <activity android:name=".FruitManager.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FruitManager.SignUpActivity"
            android:parentActivityName=".FruitManager.LoginActivity">

            <!-- <meta-data -->
            <!-- android:name="android.support.PARENT_ACTIVITY" -->
            <!-- android:value=".SignUpActivity"/> -->

        </activity>
        <activity android:name=".FruitManager.AccountActivity"></activity>
    </application>

</manifest>