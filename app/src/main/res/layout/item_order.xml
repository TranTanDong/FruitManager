<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_order_marin"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_orderImage"
            android:src="@drawable/ic_xoai"
            android:layout_width="@dimen/item_order_image"
            android:layout_height="@dimen/item_order_image"
            android:layout_margin="@dimen/layout_marin_padding_5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/layout_marin_padding_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_orderName"
                android:layout_width="@dimen/item_order_width_name"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_marin_padding_5"
                android:text="Xoài"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_text_20"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_marin_padding_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/colorAccent"
                    android:text="Giá: "
                    />

                <TextView
                    android:id="@+id/tv_orderPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30.000"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/size_text_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorAccent"
                    android:text="đ/kg"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_orderExist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Còn hàng"
                android:textColor="@color/colorBlack"
                android:paddingLeft="@dimen/layout_marin_padding_5"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/layout_marin_padding_5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_orderMinus"
                    android:layout_width="@dimen/item_order_image_button"
                    android:layout_height="@dimen/item_order_image_button"
                    android:src="@mipmap/ic_minus"/>
                <TextView
                    android:id="@+id/tv_orderAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="2"
                    android:layout_marginLeft="@dimen/layout_marin_padding_10"
                    android:layout_marginRight="@dimen/layout_marin_padding_10"
                    android:textSize="@dimen/size_text_20"
                    android:textColor="@color/colorPrimary"
                    android:text="0"/>

                <ImageView
                    android:id="@+id/btn_orderPlus"
                    android:src="@mipmap/ic_plus"
                    android:layout_width="@dimen/item_order_image_button"
                    android:layout_height="@dimen/item_order_image_button" />

                <TextView
                    android:id="@+id/tv_orderTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="@dimen/layout_marin_padding_5"
                    android:text="0"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/size_text_16" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
