<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_fImage"
            android:src="@drawable/ic_oi"
            android:layout_margin="@dimen/layout_marin_padding_5"
            android:layout_width="@dimen/item_fruit_image"
            android:layout_height="@dimen/item_fruit_image"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_fName"
                android:layout_width="@dimen/item_fruit_width"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingStart="@dimen/layout_marin_padding_5"
                android:text="Ổi Nếp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_text_20"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/layout_marin_padding_5"
                android:paddingLeft="@dimen/layout_marin_padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: "
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:id="@+id/tv_fPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15.000"
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorAccent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ/Kg"
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/layout_marin_padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xuất xứ: "
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tv_fOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Việt Nam"
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorBlack"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/layout_marin_padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HSD: "
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/tv_fExpiry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ngày"
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fExist"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Còn hàng"
                    android:paddingLeft="@dimen/layout_marin_padding_5"
                    android:textStyle="italic"
                    android:textColor="@color/colorBlack"/>

                <ImageView
                    android:id="@+id/btn_fBuy"
                    android:src="@drawable/ic_giohang_blue"
                    android:layout_width="@dimen/item_fruit_image_button"
                    android:layout_height="@dimen/item_fruit_image_button"
                    android:layout_marginRight="@dimen/layout_marin_padding_10"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
