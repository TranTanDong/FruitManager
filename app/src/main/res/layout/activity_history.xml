    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_history">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>