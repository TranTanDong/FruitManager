<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fruitmanager.LoadingActivity"
    android:background="@color/colorWhite">


    <ImageView
        android:layout_width="@dimen/load_image"
        android:layout_height="@dimen/load_image"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/load_marin_top"
        android:scaleType="centerCrop"
        android:src="@drawable/logo" />

    <ProgressBar
        android:id="@+id/adsada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/load_marin_bottom" />

</RelativeLayout>