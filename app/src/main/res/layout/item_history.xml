<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_history_marin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/layout_marin_padding_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_hImage"
            android:src="@drawable/ic_dau"
            android:layout_width="@dimen/item_history_image"
            android:layout_height="@dimen/item_history_image"
            android:layout_margin="@dimen/layout_marin_padding_5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_marin_padding_5"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Dâu tây"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_text_20"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_marin_padding_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giá: "
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorAccent"/>
                <TextView
                    android:id="@+id/tv_hPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70.000"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/size_text_16" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="đ/Kg"
                    android:textSize="@dimen/size_text_16"
                    android:textColor="@color/colorAccent"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/layout_marin_padding_5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian: "
                    android:textSize="@dimen/size_text_16"
                    android:textStyle="italic"
                    android:textColor="@color/colorBlack"/>
                <TextView
                    android:id="@+id/tv_hTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:30 | 12-12-2018 "
                    android:textSize="@dimen/size_text_16"
                    android:textStyle="italic"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_hAmount"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_marin_padding_5"
                    android:layout_marginRight="@dimen/layout_marin_padding_5"
                    android:text="2"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:textSize="@dimen/size_text_20" />


                <TextView
                    android:id="@+id/tv_hTotal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="140.000đ"
                    android:textColor="@color/colorAccent"
                    android:paddingRight="@dimen/layout_marin_padding_5"
                    android:textSize="@dimen/size_text_20" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
